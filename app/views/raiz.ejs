			$('.fivenumb').append(fivenumb);
			$('.sixnumb').append(sixnumb);
			$('.sevennumb').append(sevennumb);
		} else {
			localStorage.setItem('onenumb', '#<%= pokemon[one_random].pokenumber; %>');
