	<script>
		var roll = document.querySelector('#menu-roll');

		roll.addEventListener('click', () => {
			localStorage.removeItem('onenumb');
			localStorage.removeItem('oneimg');
			localStorage.removeItem('onename');
			localStorage.removeItem('onetype');

			location.reload(); 
		});

	</script>



	<!-- NUMEROS -->
